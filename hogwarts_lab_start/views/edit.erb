<form action="/students/<%=@student.id%>" method="post">

  <label for="first-name">First Name:</label>
  <input id="first-name" type="text" name="first_name" value=<%=@student.first_name.capitalize%>>
  <br>
  <label for="last-name">Last Name:</label>
  <input id="last-name" type="text" name="last_name" value=<%=@student.last_name.capitalize%>>
  <br>
  <label for="age">Age:</label>
  <input id="age" type="number" name="age" value=<%=@student.age%>>
  <br>
  <label for="house-select">Select House:</label>
  <select name="house_id" id="house-select">

    <% @houses.each do |house| %>

    <option value="<%=house.id%>" <%='selected' if @student.house_id == house.id%> ><%=house.name.capitalize%></option>

    <% end %>

  </select>
  <br>
  <input type="submit" value="Submit Changes">
</form>
